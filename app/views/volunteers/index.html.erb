<div class="col-xs-3">
  <h3>Filter Results</h3>

  <h3>Cause</h3>
  <input placeholder="Cause" style="width:90%"></input>

  <h3>Region</h3>
  <input placeholder="Region" style="width:90%"></input>

  <h3>Service</h3>
  <input placeholder="Service" style="width:90%"></input>

  <div class="container">
    <button class="btn">Apply</button>
  </div>
</div>

<div class="col-xs-9">
  <h3><%= @volunteers.count %> volunteers found</h3>
  <table class="table table-hover volunteers">
    <thead>
      <tr>
        <th>#</th>
        <th>Cause</th>
        <th>Work Region</th>
        <th>Service</th>
        <th>Remote Work?</th>
      </tr>
    </thead>
    <tbody>
      <% @volunteers.each_with_index do |vol, vCount| %>
        <tr>
          <!-- Item number -->
          <td><%= (@volunteers.current_page - 1) * @volunteers.per_page + (vCount + 1) %></td>
          <td><%= vol.cause %></td>
          <td><%= vol.work_region %></td>
          <td><%= vol.service %></td>
          <td><%= vol.remote_status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @volunteers, renderer: BootstrapPagination::Rails %>
</div>