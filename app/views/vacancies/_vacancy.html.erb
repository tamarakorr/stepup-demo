<!-- Read-only vacancy view-->

<% is_mine = current_user?(vacancy.ngo.user) %>

<%= form_for(vacancy, html: {class: "form-horizontal"}) do |f| %>

  <div class="col-md-offset-1">
    <% if ! is_mine %>
      <h2><%= vacancy.ngo.name %></h2>
    <% end %>
    <h3><%= vacancy.title %></h3>
    <span class="timestamp">
      Listed <%= time_ago_in_words(vacancy.created_at) %> ago
    </span>
    <br /><br />
  </div>

  <div class="form-group">
    <%= f.label :service, class: "col-sm-3 control-label" %>
    <%= f.text_field :service, class: "col-sm-4", readonly: "readonly" %>
  </div>
  <div class="form-group">
    <%= f.label :skill, class: "col-sm-3 control-label" %>
    <%= f.text_field :skill, class: "col-sm-4", readonly: "readonly" %>
  </div>
  <div class="form-group">
    <%= f.label :language, class: "col-sm-3 control-label" %>
    <%= f.text_field :language, class: "col-sm-4", readonly: "readonly" %>
  </div>
  <div class="form-group">
    <%= f.label :work_region, class: "col-sm-3 control-label" %>
    <%= f.text_field :work_region, class: "col-sm-4", readonly: "readonly" %>
  </div>
  <div class="form-group">
    <%= f.label :remote_status, class: "col-sm-3 control-label" %>
    <%= f.text_field :remote_status, class: "col-sm-4", readonly: "readonly" %>
  </div>
  <div class="form-group">
    <%= f.label :when_needed, class: "col-sm-3 control-label" %>
    <%= f.text_field :when_needed, class: "col-sm-4", readonly: "readonly" %>
  </div>
  <div class="form-group">
    <%= f.label :desc, class: "col-sm-3 control-label" %>
    <%= f.text_field :desc, class: "col-sm-4", readonly: "readonly" %>
  </div>
  <% if is_mine %>
    <div class="form-group">
      <%= f.label :is_active, class: "col-sm-3 control-label" %>
      <%= f.check_box :is_active, readonly: "readonly" %>
    </div>
  <% end %>
  
  <% if ! is_mine %>
    <!-- Make a Proposal button -->
    <div class="col-md-offset-3">
      <button class="btn btn-lg btn-primary">Make a proposal!</button>
      <span style="margin:10px;">*In the demo, this button leads to an error page.</span>
    </div>
  <% end %>
<% end %>