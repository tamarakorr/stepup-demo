<!-- Form to create vacancy-->
<%= form_for(@vacancy, html: {class: "form-horizontal"}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-3 control-label" %>
    <%= f.text_field :title, class: "col-sm-5", autofocus: "autofocus", placeholder: "Will be displayed prominently" %>
  </div>
  <div class="form-group">
    <%= f.label :service, class: "col-sm-3 control-label" %>
    <%= f.text_field :service, class: "col-sm-5", placeholder: "Example: Counseling" %>
  </div>
  <div class="form-group">
    <%= f.label :skill, class: "col-sm-3 control-label" %>
    <%= f.text_field :skill, class: "col-sm-5", placeholder: "Example: Children's Counseling" %>
  </div>
  <div class="form-group">
    <%= f.label :language, class: "col-sm-3 control-label" %>
    <%= f.text_field :language, class: "col-sm-5", placeholder: "Example: French" %>
  </div>
  <div class="form-group">
    <%= f.label :work_region, class: "col-sm-3 control-label" %>
    <%= f.text_field :work_region, class: "col-sm-5", placeholder: "Where the work will take place" %>
  </div>
  <div class="form-group">
    <%= f.label :remote_status, class: "col-sm-3 control-label" %>
    <%= f.text_field :remote_status, class: "col-sm-5", placeholder: "Yes/No/Both" %>
  </div>
  <div class="form-group">
    <%= f.label :when_needed, class: "col-sm-3 control-label" %>
    <%= f.text_field :when_needed, class: "col-sm-5", placeholder: "Example: February 2015" %>
  </div>
  <div class="form-group">
    <%= f.label "Description", class: "col-sm-3 control-label" %>
    <%= f.text_field :desc, class: "col-sm-5", placeholder: "Details about the position" %>
  </div>
  <div class="form-group">
    <%= f.label :is_active, class: "col-sm-3 control-label" %>
    <%= f.check_box :is_active, class: "bigger bigger-checkbox", checked: true %>
  </div>
  <%= f.submit "Create Vacancy", class: "btn btn-lg btn-primary col-md-offset-4" %>
<% end %>
