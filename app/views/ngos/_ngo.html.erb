<span class="timestamp">
  Created <%= time_ago_in_words(ngo.created_at) %> ago
</span>

<%= form_for(:ngo, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-3 control-label" %>
    <%= f.text_field :name, class: "col-sm-4" %>
  </div>
  <div class="form-group">
    <%= f.label :contact_phone, class: "col-sm-3 control-label" %>
    <%= f.text_field :contact_phone, class: "col-sm-4" %>
  </div>
  <div class="form-group">
    <%= f.label :contact_city, class: "col-sm-3 control-label" %>
    <%= f.text_field :contact_city, class: "col-sm-4" %>
  </div>
  <div class="form-group">
    <%= f.label :contact_country, class: "col-sm-3 control-label" %>
    <%= f.text_field :contact_country, class: "col-sm-4" %>
  </div>

  <!--%= f.submit "Sign in", class: "btn btn-large btn-primary" %-->
<% end %>