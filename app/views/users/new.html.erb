<% provide(:title, 'Register') %>

<div class="container">
  <h1>Register</h1>

    <!-- The line below is BAD BAD BAD, will cause form not to be recognized-->
    <!--form class="form-horizontal"-->

      <%= form_for @user, html: {class: "form-horizontal"} do |f| %>
          <%= render 'shared/error_messages' %>

          <div class="form-group">
            <%= f.label :name, class: "col-sm-2 control-label" %>
            <%= f.text_field :name, class: "col-sm-4" %>
          </div>

          <div class="form-group">
            <%= f.label :email, class: "col-sm-2 control-label" %>
            <%= f.text_field :email, class: "col-sm-4" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "col-sm-2 control-label" %>
            <%= f.password_field :password, class: "col-sm-4" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirmation", class: "col-sm-2 control-label" %>
            <%= f.password_field :password_confirmation, class: "col-sm-4" %>
          </div>

        <%= f.submit "Create my account", class: "btn btn-large btn-primary col-md-offset-2" %>
      <% end %>

      <%= render 'layouts/footer' %>

  <!--/form-->
</div>