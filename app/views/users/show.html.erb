<% provide(:title, @user.name) %>

<%= render 'shared/user_info' %>

<div class="col-xs-8">
  <% if @user.volunteer %>
    <%= render @volunteer, whose: "My" %>

  <% elsif @user.ngo %>
    <div class="ngo-profile">
      <h3>My NGO Profile</h3>
      <%= render @ngo %>
    </div>

  <% else %>
    <h3>Create My Profile</h3>
    <%= button_to "I am a volunteer!", new_volunteer_path, :class => "btn btn-default btn-lg", :method => :get %>
    <span><br/><br/>OR<br/><br/></span>
    <%= button_to "I am an NGO!", new_ngo_path, :class => "btn btn-default btn-lg", :method => :get %>
  <% end %>
</div>

<!-- Footer -->
<%= render 'layouts/footer' %>